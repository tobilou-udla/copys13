# Variables de entorno para SIGRH
# Sistema Integrado de Gestión de Recursos Humanos

# ================================
# CONFIGURACIÓN DE APLICACIÓN
# ================================
APP_NAME=SIGRH
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=5000
TIMEZONE=America/Mexico_City
LANGUAGE=es
COMPANY_NAME=Mi Empresa S.A.
COMPANY_ADDRESS=123 Calle Principal, Ciudad, País
COMPANY_PHONE=+1-555-123-4567
COMPANY_EMAIL=info@miempresa.com

# ================================
# CONFIGURACIÓN DE BASE DE DATOS
# ================================
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///sigrh.db
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=sigrh_user
DB_PASSWORD=sigrh_password
DB_NAME=sigrh

# ================================
# CONFIGURACIÓN DE EMAIL
# ================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=noreply@miempresa.com
EMAIL_PASSWORD=your_email_password_here
EMAIL_USE_TLS=True
EMAIL_SENDER_NAME=SIGRH - Recursos Humanos

# ================================
# CONFIGURACIÓN DE SMS
# ================================
SMS_PROVIDER=twilio

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Amazon SNS (alternativa)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ================================
# CONFIGURACIÓN DE SEGURIDAD
# ================================
SECRET_KEY=your-super-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-too
JWT_EXPIRATION_HOURS=24
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# ================================
# CONFIGURACIÓN BIOMÉTRICA
# ================================
BIOMETRIC_DEVICE_TIMEOUT=30
BIOMETRIC_MAX_FAILED_ATTEMPTS=3
ENABLE_FACE_RECOGNITION=True
ENABLE_FINGERPRINT=True
BIOMETRIC_CONFIDENCE_THRESHOLD=0.8

# ================================
# CONFIGURACIÓN DE NÓMINA
# ================================
DEFAULT_CURRENCY=USD
DEFAULT_TAX_RATE=0.15
SOCIAL_SECURITY_RATE=0.06
HEALTH_INSURANCE_COST=150.0
OVERTIME_MULTIPLIER=1.5
ANNUAL_VACATION_DAYS=22

# ================================
# CONFIGURACIÓN DE DESARROLLO
# ================================
# Descomenta las siguientes líneas para desarrollo local
